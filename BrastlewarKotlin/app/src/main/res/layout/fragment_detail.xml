<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_detail_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/medium_separation"
    android:paddingRight="@dimen/medium_separation">

    <TextView
        android:id="@+id/fragment_detail_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_separation"
        android:layout_marginTop="@dimen/base_separation"/>

    <TextView
        android:id="@+id/fragment_detail_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/fragment_detail_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_separation"/>

    <LinearLayout
        android:id="@+id/fragment_detail_second_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragment_detail_friends_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_separation"
            android:text="@string/friends"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_detail_friend_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/fragment_detail_profession_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_separation"
            android:layout_marginTop="@dimen/medium_separation"
            android:text="@string/professions"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_detail_profession_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>
